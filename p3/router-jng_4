# Create VTEP with id 10 with the default port
ip link add vxlan10 type vxlan id 10 dev eth2 dstport 0
# ip link add vxlan10 type vxlan id 10 dev eth0 remote 10.1.1.1 dstport 0
ip link set dev vxlan10 up

# Create a bridge between VTEP and eth1, so that hosts can communicate
# using this VTEP
ip link add br0 type bridge
ip link set vxlan10 master br0
ip link set eth0 master br0
ip link set dev br0 up

vtysh << EOF
conf t

! Set up interfaces
interface eth2
 ip address 10.1.1.10/30
 ip ospf area 0
exit
interface lo
 ip address 1.1.1.4/32
 ip ospf area 0
exit

! Configure BGP
router bgp 1
 neighbor 1.1.1.1 remote-as 1
 neighbor 1.1.1.1 update-source lo
 address-family l2vpn evpn
  neighbor 1.1.1.1 activate
  advertise-all-vni
 exit-address-family
exit

! Activate OSPF
router ospf
exit
EOF